pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                checkout scm // This will fetch the code from the specified repository
            }
        }
        stage('Terraform Init') {
            steps {
                bat 'terraform init' // This will initialize Terraform in the checked-out directory
            }
        }
        stage('Terraform Plan') {
            steps {
                bat 'terraform plan' // This will generate an execution plan
            }
        }
        stage('Terraform Apply') {
            steps {
                bat 'terraform apply -auto-approve' // This will apply the planned changes
            }
        }
    }
    post {
        always {
            echo 'Infrastructure provisioning finished.'
        }
        failure {
            echo 'Infrastructure provisioning failed!'
        }
    }
}
